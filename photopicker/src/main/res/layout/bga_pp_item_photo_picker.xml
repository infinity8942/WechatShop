<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bga_pp_photo_item_bg">

    <cnn.bingoogolapple.photopicker.widget.BGAImageView
        android:id="@+id/iv_item_photo_picker_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:bga_iv_square="true"
        tools:src="@mipmap/bga_pp_ic_holder_dark" />

    <TextView
        android:id="@+id/iv_item_photo_picker_flag"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/bga_pp_ic_cb_normal"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
</RelativeLayout>