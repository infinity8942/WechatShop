<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单来源"
        android:textColor="@color/color_item_text"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/source_app"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_order_filter_item"
            android:gravity="center"
            android:text="客户端"
            android:textColor="@color/gray1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/source_wechat"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_order_filter_item"
            android:gravity="center"
            android:text="小程序"
            android:textColor="@color/gray1"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="下单时间"
        android:textColor="@color/color_item_text"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_week"
            android:layout_width="94dp"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_order_filter_item"
            android:gravity="center"
            android:text="近一周内"
            android:textColor="@color/gray1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/date_month"
            android:layout_width="94dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_order_filter_item"
            android:gravity="center"
            android:text="近一月内"
            android:textColor="@color/gray1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/date_year"
            android:layout_width="94dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_order_filter_item"
            android:gravity="center"
            android:text="近一年内"
            android:textColor="@color/gray1"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="下单时间区间"
        android:textColor="@color/color_item_text"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_time"
            android:layout_width="165dp"
            android:layout_height="32dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_order_filter_input"
            android:gravity="center"
            android:hint="开始时间"
            android:textColor="@color/color_item_text"
            android:textColorHint="@color/color_more"
            android:textSize="14sp" />

        <View
            android:layout_width="7dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/line1" />

        <TextView
            android:id="@+id/end_time"
            android:layout_width="165dp"
            android:layout_height="32dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/bg_order_filter_input"
            android:gravity="center"
            android:hint="结束时间"
            android:textColor="@color/color_item_text"
            android:textColorHint="@color/color_more"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="订单编号"
        android:textColor="@color/color_item_text"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_order_filter_input"
        android:gravity="center"
        android:hint="长按粘贴订单编号"
        android:inputType="number"
        android:textColor="@color/color_item_text"
        android:textColorHint="@color/color_more"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="167dp"
            android:layout_height="36dp"
            android:layout_marginRight="4.5dp"
            android:background="@drawable/bg_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/coupon_yellow"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="167dp"
            android:layout_height="36dp"
            android:layout_marginLeft="4.5dp"
            android:background="@drawable/bg_confirm"
            android:gravity="center"
            android:text="确认"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>