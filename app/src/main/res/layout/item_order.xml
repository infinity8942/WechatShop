<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_shop"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/logo"
            android:ellipsize="end"
            android:textColor="@color/color_item_text"
            android:textSize="13sp"
            tools:text="标题" />

        <ImageView
            android:id="@+id/enter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/name"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_enter" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/contentBackground1"
        android:minHeight="80dp" />

    <RelativeLayout
        android:id="@+id/layout_price"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black_90"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/title_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/price"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/price"
            android:text="实付总额："
            android:textColor="@color/gray1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/price"
            android:layout_toLeftOf="@id/title_price"
            android:textColor="@color/gray1"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_action"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:paddingRight="16dp">

        <View
            android:id="@+id/line_action"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <TextView
            android:id="@+id/action"
            android:layout_width="74dp"
            android:layout_height="26dp"
            android:layout_below="@id/line_action"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_order_notify"
            android:gravity="center"
            android:textColor="@color/coupon_yellow"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_below="@id/line_action"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/action"
            android:background="@drawable/bg_order_filter_input"
            android:gravity="center"
            android:hint="长按粘贴订单编号"
            android:inputType="number"
            android:textColor="@color/color_item_text"
            android:textColorHint="@color/color_more"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>