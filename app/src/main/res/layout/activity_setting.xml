<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBackground"
    android:orientation="vertical"
    tools:context=".ui.user.SettingActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/padding_tab_layout_top"
            android:layout_height="@dimen/padding_tab_layout_top"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding_tab_layout_top"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_todo_item"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/ic_info"
            android:drawablePadding="13dp"
            android:gravity="center_vertical"
            android:text="我的资料"
            android:textColor="@color/color_item_text"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_cache"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_todo_item"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/cache"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textColor="@color/gray1"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/ic_clear_cache"
            android:drawablePadding="13dp"
            android:gravity="center_vertical"
            android:text="清除缓存"
            android:textColor="@color/color_item_text"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_todo_item"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/layout_feedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/ic_feedback"
            android:drawablePadding="13dp"
            android:gravity="center_vertical"
            android:text="意见反馈"
            android:textColor="@color/color_item_text"
            android:textSize="16sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/layout_feedback"
            android:background="@color/line" />

        <TextView
            android:id="@+id/layout_about_us"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/line"
            android:drawableLeft="@mipmap/ic_clear_cache"
            android:drawablePadding="13dp"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:textColor="@color/color_item_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/line"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textColor="@color/gray1"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="126dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_logout"
        android:gravity="center"
        android:text="退出"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>