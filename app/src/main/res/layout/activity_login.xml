<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="微商圈"
        android:textColor="@color/coupon_yellow"
        android:textSize="20sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/logo"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/bg_login_wx"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_wx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="微信登录"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_or"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_below="@id/login"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_centerInParent="true"
            android:text="或"
            android:textColor="@color/gray4"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/or"
            android:background="@color/imageBackground" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/or"
            android:background="@color/imageBackground" />
    </RelativeLayout>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/layout_or"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="短信验证码登录"
        android:textColor="@color/gray1"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="登录即代表您已同意"
            android:textColor="@color/color_more"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="《微圈儿协议》"
            android:textColor="@color/coupon_yellow"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>