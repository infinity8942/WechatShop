<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBackground"
    android:orientation="vertical"
    tools:context=".ui.user.FeedbackActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/padding_tab_layout_top"
            android:layout_height="@dimen/padding_tab_layout_top"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding_tab_layout_top"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="意见反馈"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_feedback_item"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="24dp"
            android:button="@drawable/selector_radiobutton"
            android:checked="true"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="功能建议"
            android:textColor="@color/color_item_text"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="24dp"
            android:button="@drawable/selector_radiobutton"
            android:checked="false"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="闪退崩溃"
            android:textColor="@color/color_item_text"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:button="@drawable/selector_radiobutton"
            android:checked="false"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="其他"
            android:textColor="@color/color_item_text"
            android:textSize="14sp" />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_feedback_item"
        android:minHeight="192dp"
        android:padding="12dp">

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:background="@null"
            android:gravity="left"
            android:hint="期待您向我们提出宝贵的建议或意见，上传截图更方便喔～"
            android:imeOptions="actionNext"
            android:minHeight="192dp"
            android:textColor="@color/color_item_text"
            android:textColorHint="@color/color_more"
            android:textSize="14sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_feedback_item"
        android:gravity="center_vertical"
        android:hint="手机号或微信号"
        android:imeOptions="actionDone"
        android:padding="12dp"
        android:singleLine="true"
        android:textColor="@color/color_item_text"
        android:textColorHint="@color/color_more"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_logout"
        android:gravity="center"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>